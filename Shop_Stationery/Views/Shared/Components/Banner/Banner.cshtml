@model List<Entity.Banner>

@section Style{
    <link href="~/css/User/Home/Home.css" rel="stylesheet" />
}
<!-- Indicators/dots -->
<div class="carousel-indicators">
    @for (int i = 0; i < Model.Count; i++)
    {
        string a = "";
        if (i == 1)
        {
            a = "active";
        }
        <button type="button" data-bs-target="#demo" data-bs-slide-to="@i" class="@a"></button>
    }
</div>

<!-- The slideshow/carousel -->
<div class="carousel-inner">
    @{
        int b = 1;
    }
    @foreach (var item in Model)
    {
        string a = "";
        if (b == 1)
        {
            a = "active";
        }
        <div class="carousel-item Panel-Notification-item @a">
            <a href="@item.link">
                <img src="@item.ImagePath" alt="New York" width="100%" height="300px" class="d-inline">
            </a>
        </div>
        b = 2;
    }
</div>
