<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop_Stationery</title>
    @*bootstrap*@
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-hidden.css" rel="stylesheet" />
    @*custom element*@
    <link href="~/css/User/Custom-Elements/Custom-Input/Custom-Input.css" rel="stylesheet" />
    <link href="~/css/User/Custom-Elements/Custom-Buttons/Custom-Buttons.css" rel="stylesheet" />
    <link href="~/css/User/Custom-Elements/Custom-Tag-A/Custom-Tag-A.css" rel="stylesheet" />
    <link href="~/css/User/Custom-Elements/Custom-Slider/Custom-Slider.css" rel="stylesheet" />
    <link href="~/css/User/Custom-Elements/Custom-RadioButton/Custom-RadioButton.css" rel="stylesheet" />
    @*style*@
    <link href="~/css/User/LayoutHome/Layout-home.css" rel="stylesheet" />
    <link href="~/assets_templates/template1/css/templatemo-softy-pinko.css" rel="stylesheet" />
    <link href="~/css/User/Custom-Elements/Custom-Buttons/Custom-Buttons.css" rel="stylesheet" />
    @*for tag <i>*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">

    @RenderSection("Style", required: false)
    <style>
        a {
            text-decoration: none;
        }
    </style>

</head>
@using Microsoft.AspNetCore.Identity
@using Entity.UserApp
@inject UserManager<userapp.UserApp> _UserManager
<body dir="rtl">
    <div class="rocch hidden-lg hidden-md" style="display:none"></div>
    <div class="box-search-sm hidden-lg hidden-md" style="display: none;">
        <form class="row" asp-action="Search" asp-controller="SearchProduct" method="get">
            <input type="search" maxlength="100" class="col-9 input-search" dir="rtl" name="Search" value="" placeholder="جستجو" />
            <button type="submit" class="col-3 Custom-Button-1">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>
    @*t1*@
    <header class="header-area header-sticky container">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="#" class="logo">
                            <img src="~/assets_templates/template1/images/PicsArt_11-09-11.54.30.jpg" alt="s.s.stock">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav hidden-sm hidden-xs">
                            <li><a href="/" class="Custom-Tag-A-1" title="home page">صفحه اصلی</a></li>
                            <li><a href="/Categories" class="Custom-Tag-A-1">دسته بندی</a></li>
                            <li><a href="#features" class="Custom-Tag-A-1">درباره</a></li>
                            <li><a href="#testimonials" class="Custom-Tag-A-1">پشتیبانی</a></li>
                            <li><a href="/ProductManagement" class="Custom-Tag-A-1">مدیریت</a></li>
                        </ul>
                        <!-- ***** Menu Start ***** -->
                        <a class="menu-trigger hidden-lg hidden-md">
                            <span></span>
                        </a>
                        <!-- ***** Menu End ***** -->
                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                <button href="#" class=" Custom-Button-1 btn-login-signin-login" title="login/signin">
                                    <i class="bi bi-caret-down"></i>

                                    <i class="bi bi-person-circle"></i>
                                </button>
                                <div class="box-account dropdown" id="box-account">
                                    <div class="header-box-account">
                                        <img src="/assets_templates/template1/images/img_welcome.png" alt="کاربر" />

                                        <div class="phonenumber">
                                            <p class="font-BKoodkBd">
                                                @User.Identity.Name
                                            </p>
                                            <p class="subtitle">
                                                @{
                                                    var user = await _UserManager.FindByNameAsync(User.Identity.Name);
                                                    string FullName = user.FirstName + " " + user.LastName;
                                                }
                                                @FullName
                                            </p>
                                        </div>
                                        <a href="@Url.Action("DashBoard","Account")" class="arrow-box-account Custom-Tag-A-1"><i class="bi bi-caret-left"></i></a>
                                    </div>
                                    <div class="body-box-account">
                                        <ul class="box-account-ul">
                                            <li><i class="bi bi-person"></i>&nbsp;<a href="@Url.Action("DashBoard","Account")" class="Custom-Tag-A-1">مشاهده حساب کاربری</a></li>
                                            <li><i class="bi bi-bag"></i>&nbsp;<a href="@Url.Action("Basket","Account")" class="Custom-Tag-A-1">سبد خرید</a></li>
                                            <li><i class="bi bi-receipt-cutoff"></i>&nbsp;<a href="@Url.Action("Order","Account")" class="Custom-Tag-A-1">سفارش های من</a></li>
                                            <li><i class="bi bi-chat-right-text-fill"></i>&nbsp;<a href="@Url.Action("Tickets","Account")" class="Custom-Tag-A-1">تیکت ها</a></li>
                                            <li><i class="bi bi-box-arrow-right"></i>&nbsp;<form asp-action="Logout" id="FormLogout" asp-controller="Login" method="post"></form> <a href="#" class="Custom-Tag-A-1 logout">خروج از حساب کاربری</a></li>
                                        </ul>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <a href="/PhoneNumber" class=" Custom-Button-1 btn-login-signin " title="login/signin">
                                    <i class="bi bi-person-circle"></i>
                                    <span class="hidden-xs hidden-sm">
                                        ورود/ثبت نام
                                    </span>
                                </a>
                            }
                        }

                        <a class="hidden-md hidden-lg Custom-Button-1 btn-open-search-box" title="login/signin">
                            <i class="bi bi-search"></i>
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- ***** sidenav Area Start ***** -->
        <div id="mySidenav" class="sidenav hidden-lg hidden-md">
            <div class="logo-sidenav">
                <img src="~/assets_templates/template1/images/logo.png" width="200px" />
            </div>
            <div class="search-box-sidnav">
                <form action="" method="post">
                    <input type="search" maxlength="50" class="input-search-sidnav" dir="rtl" name="search" value="" placeholder="جستجو" />
                    <button type="submit" class="Custom-Button-2 btn-search-sidenav">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
            <ul class="ul-sidenav">
                <li><a href="/" class="Custom-Tag-A-1">صفحه اصلی</a></li>
                <li><a href="Categories" class="Custom-Tag-A-1">دسته بندی</a></li>
                <li><a href="#features" class="Custom-Tag-A-1">درباره</a></li>
                <li><a href="#testimonials" class="Custom-Tag-A-1">پشتیبانی</a></li>
            </ul>
            <hr class="line-sidnav" />
            <ul class="ul-sidenav">
                <li><a href="/" class="active">صفحه اصلی</a></li>
                <li><a href="Categories" class="">دسته بندی</a></li>
                <li><a href="#features" class="">درباره</a></li>
                <li><a href="#testimonials" class="">پشتیبانی</a></li>
            </ul>
            <a class="closebtn" onclick="closeNav()">&times;</a>
            <a href="/PhoneNumber" class=" Custom-Button-2 btn-login-signin-sidnav" title="login/signin">
                <i class="bi bi-person-circle"></i>
                ورود/ثبت نام
            </a>
        </div>
        <!-- ***** sidenav Area End ***** -->
    </header>
    <!-- ***** Welcome Area Start ***** -->
    <div class="welcome-area" id="welcome">
        <!-- ***** Header Text Start ***** -->
        <div class="header-text">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h1><b>s.s. <strong>stock</strong></b></h1>
                    </div>
                </div>
            </div>
        </div>
        <!-- ***** Header Text End ***** -->
    </div>
    <!-- ***** Welcome Area End ***** -->
    <div class="nav-2 hidden-sm hidden-xs">
        <div class="container">
            <nav class="main-nav-2">
                <ul class="nav hidden-sm hidden-xs">
                    <li><a href="/" class="active">صفحه اصلی</a></li>
                    <li><a href="Categories" class="">دسته بندی</a></li>
                    <li><a href="#features" class="">درباره</a></li>
                    <li><a href="#testimonials" class="">پشتیبانی</a></li>
                </ul>
            </nav>
            <div class="search-box">
                <form asp-action="Search" asp-controller="SearchProduct" method="get">
                    <input type="search" maxlength="100" class="input-search" dir="rtl" name="Search" value="" placeholder="جستجو" />
                    <button type="submit" class="Custom-Button-1 btn-search">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
    @*t1*@
    <br />
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div style="padding:0 10px">
            <div class="container box-information-footer">
                <div class="box-email-footer">
                    <span>
                        <i>
                            <i class="fa fa-address-card icon"></i>
                        </i>
                        کنگاور،خیابان شهید مدافعان حرم،جنب بنیاد شهید
                    </span>
                </div>
                <br class="hidden-lg hidden-md hidden-sm" />
                <div class="box-phone-footer">
                    <span>
                        <i>
                            <i class="fa fa-phone icon"></i>
                        </i>
                        09224982760
                    </span>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/assets_templates/template1/js/custom.js"></script>
    <script src="~/js/User/Layout_Home/Layout_Home.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
