@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@model Shop_Stationery.Models.ViewModelAdmin.ViewModelShop.ViewModelAddShop
@section Style{
    <link href="~/css/Admin/ProductManagement/ProductManagement.css" rel="stylesheet" />
}
@using Entity;
@{
    var backModel = ViewBag.model;
    List<Shop> shops = new List<Shop>();
    shops = ViewBag.Shops;
}
<div class="product-manage">
    <h1 class="title">
        مدیریت کالاها
    </h1>
    <div class="body-product-manage">
        <div class="add-Product">
            @if (ViewBag.ResultEdit == true)
            {
                <div class="alert alert-info">
                    <h5>فروشگاه ویرایش شد</h5>
                </div>
            }
            @if (ViewBag.ResultDelete == true)
            {
                <div class="alert alert-warning">
                    <h5>فروشگاه حذف شد</h5>
                </div>
            }
            @if (ViewBag.Result == true)
            {
                <div class="alert alert-success">
                    <h5>فروشگاه اضافه شد</h5>
                </div>
            }
            @*Start Form Shop*@
            <form class="form-add-banner row" asp-action="ShopManagement" asp-controller="ShopManagement" method="post" enctype="multipart/form-data">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input type="text" class="Custom-Input-2 col-12" asp-for="Name" name="Name" value="@backModel.Name" />
                </div>
                @*//////////*@
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label asp-for="Address"></label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                    <textarea type="text" class="Custom-Input-2 col-12" asp-for="Address" name="Address" value="@backModel.Address"></textarea>
                </div>
                @*//////////*@
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <label asp-for="NumberPhone"></label>
                    <span asp-validation-for="NumberPhone" class="text-danger"></span>
                    <input type="text" class="Custom-Input-2 col-12" asp-for="NumberPhone" name="NumberPhone" value="@backModel.NumberPhone" />
                </div>
                @*//////////*@
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <label asp-for="PostingDay"></label>
                    <span asp-validation-for="PostingDay" class="text-danger"></span>
                    <input type="number" class="Custom-Input-2 col-12" asp-for="PostingDay" name="PostingDay" value="@backModel.PostingDay" />
                </div>
                @*//////////*@
                <br />
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 div-btn-submit ">
                    <button type="submit" class=" col-6 btn btn-success">ثبت فروشگاه</button>
                </div>
                <br />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <br />
            </form>
            @*End Form Shop*@

        </div>
        <div class="product-manage-options">
            <div class="search-product-manage">
                @*Start Form Search*@
                <form asp-action="SearchProduct" asp-controller="ProductManagement" method="post">
                    <button type="submit" class="porduct-option btn btn-success d-inline"><i class="fa fa-search"></i></button>
                    <input type="text" name="Name" value="" class="Custom-Input-1 d-inline" />
                </form>
                @*End Form Search*@
            </div>
        </div>
        <br />
        <div class="table-box-product-manage">
            <table class="table table-hover table-product-manage">
                <thead>
                    <tr>
                        <th>...</th>
                        <th>نام فروشگاه</th>
                        <th>شماره تماس</th>
                        <th>آدرس</th>
                        <th>زمان ارسال</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in shops)
                        {
                            <tr>
                                <td>
                                    <button class="btn btn-outline-danger"><i class="bi bi-trash3-fill"></i></button>
                                    <button class="btn btn-outline-info"><i class="bi bi-pencil-square"></i></button>
                                </td>
                                <td>@item.Name</td>
                                <td>@item.NumberPhone</td>
                                <td>@item.Address</td>
                                <td>@item.PostingDay</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}